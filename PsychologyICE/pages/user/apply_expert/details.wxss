page{
    display: flex;
    flex-direction: column;
}

.top{
    width: 100%;
    height: 600rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    position: relative;
}

.wave{
    width: 100%;
    display: flex;
    position: absolute;
    bottom: 0rpx;
}

.wave image{
    height:150rpx;
}

.text{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.mtext{
    line-height: 30rpx;
}

.img{
    flex: 1;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.img image{
    width: 350rpx;
}